	<div class="blog-header">
      <h1 class="blog-title">All Blog Posts</h1>
      <p class="lead blog-description">This blog was created by Charlie Kelman for Atlantis Tech</p>
    </div>

    <div class="row">

      <div class="col-sm-8 blog-main">

<% @posts.each do |post| %>
          <div class="blog-post">
            <h2 class="blog-post-title"><%= post.title %></h2>
            <p class="blog-post-meta">
            	<%=Date::MONTHNAMES[post.dat.month]%> <%=post.dat.day%>, <%=post.dat.year%> by <a href="#"><%=User.find(post.use).email%></a>
            </p>
            
            <p class="blog-post-meta">
            <%= link_to 'Show', post %>
            <%if(current_user == User.find(post.use))%>
            ,
            <%= link_to 'Edit', edit_post_path(post) %>,
            <%= link_to 'Destroy', post_path(post),
			method: :delete, data: {confirm: 'Are you sure?' } %>
			<%end%>
            </p>

            <p>
            	<%= post.entry %>
            </p>
          </div><!-- /.blog-post -->

<% end %> 

          
          
          
		
          
          	
